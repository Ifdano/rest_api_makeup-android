<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "@color/mainBackground">
    
    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:orientation = "vertical">
    
    	<ImageView
        	android:id = "@+id/image"
        	android:layout_width = "@dimen/_120sdp"
        	android:layout_height = "@dimen/_120sdp"
        	android:src = "@drawable/noimage"
        	android:background = "@null"
        	android:layout_gravity = "center"
        	android:layout_marginBottom = "@dimen/_10sdp"/>
    
    	<TextView
        	android:layout_width = "match_parent"
        	android:layout_height = "wrap_content"
        	android:text = "@string/descriptionBrand"
        	android:textSize = "@dimen/_18ssp"
        	android:gravity = "center"
        	android:textColor = "@color/textColorBlack"
        	android:background = "@color/description"
        	android:padding = "@dimen/_5sdp"
        	android:layout_marginBottom = "@dimen/_5sdp"/>
    
    	<TextView
        	android:id = "@+id/textBrand"
        	android:layout_width = "wrap_content"
        	android:layout_height = "wrap_content"
        	android:hint = "no data"
        	android:textColor = "@color/textColorBlack"
        	android:textSize = "@dimen/_18ssp"
        	android:gravity = "center"
        	android:layout_gravity = "center"
        	android:padding = "@dimen/_5sdp"
        	android:layout_marginBottom = "@dimen/_10sdp"/>
    	
    	<TextView
        	android:layout_width = "match_parent"
        	android:layout_height = "wrap_content"
        	android:text = "@string/descriptionName"
        	android:textSize = "@dimen/_18ssp"
        	android:gravity = "center"
        	android:textColor = "@color/textColorBlack"
        	android:background = "@color/description"
        	android:padding = "@dimen/_5sdp"
        	android:layout_marginBottom = "@dimen/_5sdp"/>
    
    	<TextView
        	android:id = "@+id/textName"
        	android:layout_width = "wrap_content"
        	android:layout_height = "wrap_content"
        	android:hint = "no data"
        	android:textColor = "@color/textColorBlack"
        	android:textSize = "@dimen/_18ssp"
        	android:gravity = "center"
        	android:layout_gravity = "center"
        	android:padding = "@dimen/_5sdp"
        	android:layout_marginBottom = "@dimen/_10sdp"/>
    	
    	<TextView
        	android:layout_width = "match_parent"
        	android:layout_height = "wrap_content"
        	android:text = "@string/descriptionPrice"
        	android:textSize = "@dimen/_18ssp"
        	android:gravity = "center"
        	android:textColor = "@color/textColorBlack"
        	android:background = "@color/description"
        	android:padding = "@dimen/_5sdp"
        	android:layout_marginBottom = "@dimen/_5sdp"/>
    
    	<TextView
        	android:id = "@+id/textPrice"
        	android:layout_width = "wrap_content"
        	android:layout_height = "wrap_content"
        	android:hint = "no data"
        	android:textColor = "@color/textColorBlack"
        	android:textSize = "@dimen/_18ssp"
        	android:gravity = "center"
        	android:layout_gravity = "center"
        	android:padding = "@dimen/_5sdp"
        	android:layout_marginBottom = "@dimen/_10sdp"/>
    	
    	<TextView
        	android:layout_width = "match_parent"
        	android:layout_height = "wrap_content"
        	android:text = "@string/descriptionDescription"
        	android:textSize = "@dimen/_18ssp"
        	android:gravity = "center"
        	android:textColor = "@color/textColorBlack"
        	android:background = "@color/description"
        	android:padding = "@dimen/_5sdp"
        	android:layout_marginBottom = "@dimen/_5sdp"/>
    
    	<TextView
        	android:id = "@+id/textDescription"
        	android:layout_width = "wrap_content"
        	android:layout_height = "wrap_content"
        	android:hint = "no data"
        	android:textColor = "@color/textColorBlack"
        	android:textSize = "@dimen/_18ssp"
        	android:gravity = "center"
        	android:layout_gravity = "center"
        	android:padding = "@dimen/_5sdp"
        	android:layout_marginBottom = "@dimen/_10sdp"/>
    	
    	<TextView
        	android:layout_width = "match_parent"
        	android:layout_height = "wrap_content"
        	android:text = "@string/descriptionCreated"
        	android:textSize = "@dimen/_18ssp"
        	android:gravity = "center"
        	android:textColor = "@color/textColorBlack"
        	android:background = "@color/description"
        	android:padding = "@dimen/_5sdp"
        	android:layout_marginBottom = "@dimen/_5sdp"/>
    
    	<TextView
        	android:id = "@+id/textCreated"
        	android:layout_width = "wrap_content"
        	android:layout_height = "wrap_content"
        	android:hint = "no data"
        	android:textColor = "@color/textColorBlack"
        	android:textSize = "@dimen/_18ssp"
        	android:gravity = "center"
        	android:layout_gravity = "center"
        	android:padding = "@dimen/_5sdp"
        	android:layout_marginBottom = "@dimen/_10sdp"/>
    	
    </LinearLayout>
    
    
</ScrollView>